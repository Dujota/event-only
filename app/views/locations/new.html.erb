<h1>New Loocation</h1>

<%= link_to 'Show all locatios', locations_path %>

<%= form_for @location do |f| %>
<p>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :city %><br>
  <%= f.text_field :city %>
</p>

<p>
  <%= f.label :description %> <br>
  <%= f.text_field :description %>
</p>

<p>
  <%= f.label :image %><br>
  <%= f.text_field :image %>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>
